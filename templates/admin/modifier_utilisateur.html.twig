{% extends 'base.html.twig' %}

{% block title %}Modifier un utilisateur{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#F6F2E5] px-4 py-10">
  <div class="max-w-xl mx-auto bg-white p-8 rounded-xl shadow-lg border border-yellow-500">

    <h1 class="text-3xl font-extrabold text-yellow-700 mb-6 text-center drop-shadow">
      ✏️ Modifier l’utilisateur : {{ user.email }}
    </h1>

    {% for msg in app.flashes('success') %}
      <div class="bg-green-100 text-green-700 px-4 py-2 rounded mb-6 text-center font-semibold">
        {{ msg }}
      </div>
    {% endfor %}

    {{ form_start(form, { attr: { class: 'space-y-5' } }) }}

      {% for field in form %}
        <div>
          {{ form_label(field, null, { label_attr: { class: 'block text-sm font-medium text-gray-700 mb-1' } }) }}
          {{ form_widget(field, {
            attr: {
              class: 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-400 focus:border-yellow-500 bg-white text-gray-900'
            }
          }) }}
          {{ form_errors(field) }}
        </div>
      {% endfor %}

      <button type="submit"
              class="w-full bg-yellow-500 text-black font-bold py-2 px-4 rounded-md shadow hover:bg-yellow-400 transition">
        ✅ Sauvegarder les modifications
      </button>

    {{ form_end(form) }}

  </div>
</div>
{% endblock %}
