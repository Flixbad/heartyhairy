{% extends 'base.html.twig' %}


{% block body %}

<script>
  setTimeout(() => {
    document.getElementById('promoPopup').classList.remove('hidden');
  }, 2500); 
</script>

<!-- Hero section -->
<section class="relative w-full h-[70vh] bg-center bg-cover flex items-center justify-center"
         style="background-image: url('/image/hero-restaurant.jpg');">
  <div class="bg-[#EDE3C3] bg-opacity-95 px-8 py-6 rounded-xl text-center shadow-lg">
    <h1 class="text-5xl font-extrabold text-yellow-700 mb-4 drop-shadow-md">
      Bienvenue chez Hearty & Hairy 🍔
    </h1>
    <p class="text-gray-900 text-lg mb-6 font-medium">
      Un voyage gustatif qui fait frémir les papilles.
    </p>
    <a href="{{ path('menu') }}"
       class="bg-yellow-500 text-black font-bold px-6 py-3 rounded-full hover:bg-yellow-400 transition">
      Découvrir la carte
    </a>
  </div>

  <div id="promoPopup"
     class="fixed top-10 left-1/2 transform -translate-x-1/2 z-50 bg-yellow-100 border border-yellow-500 rounded-lg shadow-lg p-6 max-w-sm text-center hidden">
  <h2 class="text-lg font-bold text-yellow-800 mb-2">🎉 Offre du jour</h2>
  <p class="text-gray-700 mb-4">-10% sur toutes les entrées jusqu'à ce soir !</p>
  <a href="{{ path('menu') }}"
     class="inline-block bg-yellow-500 text-black font-semibold px-4 py-2 rounded hover:bg-yellow-400 transition">
    Je profite 🍽️
  </a>
  <button onclick="document.getElementById('promoPopup').classList.add('hidden')"
          class="absolute top-2 right-2 text-yellow-800 text-xl font-bold hover:text-yellow-600">
    &times;
  </button>
</div>
</section>


<!-- À propos -->
<section class="max-w-4xl mx-auto px-6 py-16">
  <div class="bg-[#EDE3C3] bg-opacity-95 p-8 rounded-xl shadow-lg text-center border border-yellow-500">
    <h2 class="text-3xl font-extrabold text-yellow-700 mb-4 tracking-wide drop-shadow-sm">
      Notre philosophie
    </h2>
    <p class="text-gray-800 text-lg leading-relaxed">
      Chez Hearty & Hairy, nous célébrons la générosité, le goût et le partage. <br class="hidden sm:block" />
      Nos plats sont faits maison avec amour, en sélectionnant des ingrédients frais et locaux.
    </p>
  </div>
</section>


<!-- Galerie -->
<section class="max-w-6xl mx-auto px-6 py-12">
  <h2 class="text-5xl font-extrabold text-yellow-700 mb-4 drop-shadow-md text-center">Ambiance & plats en images 📸</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    <img src="https://images.unsplash.com/photo-1674876105548-520cc1e2c82a?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8M3x8Zm9vZCUyMGJ1cmdlcnxlbnwwfHwwfHx8MA%3D%3D" alt="Plat 1" class="rounded-lg shadow hover:scale-105 transition" />
    <img src="https://images.unsplash.com/photo-1623944634209-d05ecbfaa45a?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTF8fGZvb2QlMjBidXJnZXJ8ZW58MHx8MHx8fDA%3D" alt="Plat 2" class="rounded-lg shadow hover:scale-105 transition" />
    <img src="https://images.unsplash.com/photo-1622431062669-ed38267b6de5?w=900&auto=format&fit=crop&q=60&ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTR8fGZvb2QlMjBidXJnZXJ8ZW58MHx8MHx8fDA%3D" alt="Salle du restaurant" class="rounded-lg shadow hover:scale-105 transition" />
  </div>
</section>

<!-- Horaires & contact -->
<section class="py-12 px-6">
  <div class="max-w-4xl mx-auto bg-[#EDE3C3] bg-opacity-95 text-gray-900 p-8 rounded-xl shadow-lg border border-yellow-500">
    <h2 class="text-3xl font-extrabold text-yellow-700 mb-8 text-center drop-shadow-md">
      📍 Informations pratiques
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
      <div>
        <h3 class="text-lg font-semibold mb-3">🕒 Horaires</h3>
        <ul class="space-y-2 text-gray-700 text-base leading-relaxed">
          <li>Lundi au Vendredi : <strong>12h – 14h</strong> / <strong>19h – 22h</strong></li>
          <li>Samedi : <strong>12h – 23h</strong></li>
          <li>Dimanche : <strong>Fermé</strong></li>
        </ul>
      </div>
      <div>
        <h3 class="text-lg font-semibold mb-3">📞 Contact</h3>
        <ul class="space-y-2 text-gray-700 text-base leading-relaxed">
          <li>📍 Adresse : <strong>36 Rue du Antoine Primat, Villeurbanne</strong></li>
          <li>📞 Téléphone : <strong>04 78 12 34 56</strong></li>
          <li>✉️ Email : <strong>hearty@hairyfood.fr</strong></li>
        </ul>
      </div>
    </div>
  </div>
</section>


<!-- Footer CTA -->
<section class="text-center py-8">
  <a href="{{ path('menu') }}"
     class="bg-yellow-400 text-black font-bold px-8 py-4 rounded-full shadow hover:bg-yellow-300 transition">
    Commander maintenant 🍽️
  </a>
</section>
{% endblock %}
