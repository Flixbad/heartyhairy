{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-gray-100">
  <div class="w-full max-w-md bg-white rounded-lg shadow-lg p-6">
    <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">üìù Inscription</h2>

    {% for flash_error in app.flashes('verify_email_error') %}
      <div class="bg-red-100 text-red-800 px-4 py-2 rounded mb-4">
        {{ flash_error }}
      </div>
    {% endfor %}

    {{ form_start(registrationForm, { attr: { class: 'space-y-4' } }) }}

      <div>
        <label for="{{ registrationForm.email.vars.id }}" class="block text-sm font-medium text-gray-700">Adresse email</label>
        {{ form_widget(registrationForm.email, {
          attr: {
            class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500'
          }
        }) }}
        {{ form_errors(registrationForm.email) }}
      </div>

      <div>
        <label for="{{ registrationForm.plainPassword.vars.id }}" class="block text-sm font-medium text-gray-700">Mot de passe</label>
        {{ form_widget(registrationForm.plainPassword, {
          attr: {
            class: 'mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-indigo-500 focus:border-indigo-500'
          }
        }) }}
        {{ form_errors(registrationForm.plainPassword) }}
      </div>

      <div class="flex items-start">
        {{ form_widget(registrationForm.agreeTerms, {
          attr: { class: 'mt-1 mr-2' }
        }) }}
        <label for="{{ registrationForm.agreeTerms.vars.id }}" class="text-sm text-gray-700">
          {{ form_label(registrationForm.agreeTerms) }}
        </label>
        {{ form_errors(registrationForm.agreeTerms) }}
      </div>

      <button type="submit" class="w-full bg-indigo-600 text-white py-2 px-4 rounded hover:bg-indigo-700 transition duration-200">
        ‚úÖ S'inscrire
      </button>

    {{ form_end(registrationForm) }}
  </div>
</div>
{% endblock %}
