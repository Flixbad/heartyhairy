{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="min-h-screen flex items-center justify-center bg-[#F6F2E5] px-4">
  <div class="w-full max-w-md rounded-xl shadow-lg border border-yellow-500 p-8">
    <h2 class="text-3xl font-extrabold text-yellow-700 text-center mb-6 drop-shadow-md">üìù Inscription</h2>

    {% for flash_error in app.flashes('verify_email_error') %}
      <div class="bg-red-100 text-red-800 px-4 py-2 rounded mb-4">
        {{ flash_error }}
      </div>
    {% endfor %}

    {{ form_start(registrationForm, { attr: { class: 'space-y-6' } }) }}

      <div>
        <label for="{{ registrationForm.email.vars.id }}" class="block text-sm font-semibold text-gray-800 mb-1">Adresse email</label>
        {{ form_widget(registrationForm.email, {
          attr: {
            class: 'block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-400 focus:border-yellow-500 bg-white text-gray-900'
          }
        }) }}
        {{ form_errors(registrationForm.email) }}
      </div>

      <div>
        <label for="{{ registrationForm.plainPassword.vars.id }}" class="block text-sm font-semibold text-gray-800 mb-1">Mot de passe</label>
        {{ form_widget(registrationForm.plainPassword, {
          attr: {
            class: 'block w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-400 focus:border-yellow-500 bg-white text-gray-900'
          }
        }) }}
        {{ form_errors(registrationForm.plainPassword) }}
      </div>

      <div class="flex items-start gap-2">
        {{ form_widget(registrationForm.agreeTerms, {
          attr: { class: 'mt-1' }
        }) }}
        <label for="{{ registrationForm.agreeTerms.vars.id }}" class="text-sm text-gray-700">
          {{ form_label(registrationForm.agreeTerms) }}
        </label>
        {{ form_errors(registrationForm.agreeTerms) }}
      </div>

      <button type="submit"
              class="w-full bg-yellow-500 text-black font-bold py-2 px-4 rounded-md shadow hover:bg-yellow-400 transition">
        ‚úÖ S'inscrire
      </button>

    {{ form_end(registrationForm) }}
  </div>
</div>
{% endblock %}
