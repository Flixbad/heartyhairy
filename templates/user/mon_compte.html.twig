{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}
<div class="min-h-screen bg-[#F6F2E5] flex items-center justify-center px-4">
  <div class="w-full max-w-xl bg-white/90 rounded-xl shadow-lg border border-yellow-500 p-8">

    <h1 class="text-3xl font-extrabold text-yellow-700 text-center mb-6 drop-shadow-md">ðŸ‘¤ Mon compte</h1>

    {% for msg in app.flashes('success') %}
      <div class="bg-green-100 text-green-700 px-4 py-2 rounded mb-6 text-center font-semibold">
        {{ msg }}
      </div>
    {% endfor %}

    {% if photo %}
      <div class="flex justify-center mb-6">
        <img src="{{ asset('uploads/photos/' ~ photo) }}"
             class="w-28 h-28 rounded-full object-cover border-4 border-yellow-500 shadow"
             alt="Photo de profil">
      </div>
    {% endif %}

    {{ form_start(form, { attr: { enctype: 'multipart/form-data', class: 'space-y-5' } }) }}

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Email</label>
        {{ form_widget(form.email, {
          attr: {
            class: 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-400 focus:border-yellow-500 bg-white text-gray-900'
          }
        }) }}
        {{ form_errors(form.email) }}
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">TÃ©lÃ©phone</label>
        {{ form_widget(form.phone, {
          attr: {
            class: 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-400 focus:border-yellow-500 bg-white text-gray-900'
          }
        }) }}
        {{ form_errors(form.phone) }}
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Nouveau mot de passe</label>
        {{ form_widget(form.plainPassword, {
          attr: {
            class: 'w-full px-4 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-yellow-400 focus:border-yellow-500 bg-white text-gray-900'
          }
        }) }}
        {{ form_errors(form.plainPassword) }}
      </div>

      <div>
        <label class="block text-sm font-semibold text-gray-700 mb-1">Photo de profil</label>
        {{ form_widget(form.photo, {
          attr: {
            class: 'block w-full text-sm text-gray-600 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-yellow-500 file:text-white hover:file:bg-yellow-400'
          }
        }) }}
        {{ form_errors(form.photo) }}
      </div>

      <button type="submit"
              class="w-full bg-yellow-500 text-black font-bold py-2 px-4 rounded-md shadow hover:bg-yellow-400 transition">
        âœ… Enregistrer
      </button>

    {{ form_end(form) }}

  </div>
</div>
{% endblock %}
